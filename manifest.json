{
  "manifest_version": 3,
  "name": "CS:GO Gambling RTP Exposer",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "https://www.csgoroll.com/*",
    "https://rain.gg/*",
    "https://csgogem.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://rain.gg/*"],
      "js": ["rain_content.js"]
    },
    {
      "matches": ["https://csgogem.com/*"],
      "js": ["gem_content.js"]
    }
  ]
}
